{
    "name": "aeatech/transaction-manager-doctrine-adapter",
    "description": "Implementation of the transaction manager connection with Doctrine",
    "keywords": ["aeatech", "transaction-manager", "transaction", "database", "MySQL", "PostgreSQL"],
    "license": "MIT",
    "type": "library",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "aeatech/transaction-manager-core": "^1.0",
        "doctrine/dbal": "^3.7 || ^4.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6.10",
        "phpbench/phpbench": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "AEATech\\TransactionManager\\DoctrineAdapter\\": "src/AEATech/TransactionManager/DoctrineAdapter"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AEATech\\Test\\TransactionManager\\DoctrineAdapter\\": "tests/AEATech/Test/TransactionManager/DoctrineAdapter",
            "AEATech\\Benchmark\\TransactionManager\\DoctrineAdapter\\": "benchmarks/AEATech/Benchmark/TransactionManager/DoctrineAdapter"
        }
    },
    "archive": {
        "exclude": [
            "/docker",
            "/tests",
            "/phpunit.xml",
            "/phpbench.json",
            "/benchmarks",
            "/phpstan.neon",
            "/.build",
            "/.github"
        ]
    }
}
